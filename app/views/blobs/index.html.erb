<p id="notice"><%= notice %></p>

<h1>Blobs</h1>

<table>
  <thead>
    <tr>
      <th>User: <%=current_user.email%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blobs.each do |blob| %>
      <tr>
        <td><%= link_to blob.blob_data_file_name, blob.blob_data.url %></td>
        <td><%= link_to 'Show', blob %></td>
        <td><%= link_to 'Edit', edit_blob_path(blob) %></td>
        <td><%= link_to 'Destroy', blob, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blob', new_blob_path %>
